<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Yukari.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Yukari.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid
            x:Name="AppTitleBar"
            Height="48"
            Padding="0"
            VerticalAlignment="Top"
            AutomationProperties.AutomationId="AppTitleBar">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image
                Width="19"
                Height="19"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Source="/Assets/Square44x44Logo.altform-unplated_targetsize-48.png" />
            <TextBlock
                Grid.Column="1"
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="Yukari" />
        </Grid>

        <NavigationView
            x:Name="NavigationViewControl"
            BackRequested="NavigationViewControl_BackRequested"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
            IsBackEnabled="{Binding IsBackEnabled}"
            ItemInvoked="NavigationViewControl_ItemInvoked"
            OpenPaneLength="200"
            PaneDisplayMode="Auto">
            <NavigationView.Resources>
                <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>
                <Thickness x:Key="NavigationViewMinimalContentMargin">0,48,0,0</Thickness>
                <Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</Thickness>
                <Thickness x:Key="NavigationViewHeaderMargin">36,30,36,0</Thickness>
                <!--  This is the rounded corner on the Top left of the L Pattern  -->
                <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>
            </NavigationView.Resources>

            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Favorites"
                    Icon="Favorite"
                    IsSelected="True"
                    Tag="Yukari.Views.FavoritesPage" />
                <NavigationViewItem
                    Content="Discover"
                    Icon="Library"
                    Tag="Yukari.Views.DiscoverPage" />

                <NavigationViewItemHeader Content="Pinned" />

            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem
                    Content="Downloads"
                    Icon="Download"
                    Tag="Yukari.Views.DownloadsPage" />
                <NavigationViewItem
                    Content="Help"
                    Icon="Help"
                    Tag="Yukari.Views.HelpPage" />
            </NavigationView.FooterMenuItems>

            <Frame
                x:Name="ContentFrame"
                Padding="16"
                Navigated="ContentFrame_Navigated">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition />
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </NavigationView>
    </Grid>
</Page>
