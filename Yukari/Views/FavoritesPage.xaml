<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Yukari.Views.FavoritesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Yukari.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Yukari.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="MangaTemplate" x:DataType="models:Manga">
            <Grid Width="200" Height="280">
                <Image Source="{x:Bind CoverImageUrl}" Stretch="Fill" />

                <Grid
                    Height="30"
                    Margin="2"
                    Padding="8,0,4,0"
                    VerticalAlignment="Bottom"
                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                    ColumnDefinitions="*, Auto"
                    ColumnSpacing="4"
                    CornerRadius="4">
                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="{x:Bind Title}"
                        ToolTipService.ToolTip="{x:Bind Title}" />

                    <Button
                        Grid.Column="1"
                        Width="28"
                        Height="24"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent">
                        <Button.Content>
                            <FontIcon FontSize="16" Glyph="&#xE712;" />
                        </Button.Content>
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Icon="Pin" Text="Pin" />
                                <MenuFlyoutItem Icon="Delete" Text="Remove" />
                                <MenuFlyoutItem Text="Select">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE73A;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>

                </Grid>

            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid RowDefinitions="Auto, *">
        <Grid Grid.Row="0" Padding="20,14,36,16" ColumnDefinitions="Auto, *, Auto">
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <FontIcon FontSize="24" Glyph="&#xE734;" />
                <TextBlock
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Favorites" />
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <DropDownButton Background="Transparent" BorderBrush="Transparent">
                    <DropDownButton.Content>
                        <FontIcon Glyph="&#xE8CB;" />
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">

                            <RadioMenuFlyoutItem
                                GroupName="Classification"
                                IsChecked="True"
                                Text="Alphabetical">
                                <RadioMenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE97E;" />
                                </RadioMenuFlyoutItem.Icon>
                            </RadioMenuFlyoutItem>

                            <RadioMenuFlyoutItem GroupName="Classification" Text="Last read">
                                <RadioMenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE823;" />
                                </RadioMenuFlyoutItem.Icon>
                            </RadioMenuFlyoutItem>

                            <RadioMenuFlyoutItem GroupName="Classification" Text="Recently updated">
                                <RadioMenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE895;" />
                                </RadioMenuFlyoutItem.Icon>
                            </RadioMenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <RadioMenuFlyoutItem
                                GroupName="Orientation"
                                Icon="Up"
                                Text="Ascendant" />

                            <RadioMenuFlyoutItem
                                GroupName="Orientation"
                                IsChecked="True"
                                Text="Descending">
                                <RadioMenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE74B;" />
                                </RadioMenuFlyoutItem.Icon>
                            </RadioMenuFlyoutItem>

                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <DropDownButton Background="Transparent" BorderBrush="Transparent">
                    <DropDownButton.Content>
                        <FontIcon Glyph="&#xE71C;" />
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">

                            <RadioMenuFlyoutItem
                                GroupName="Filter"
                                Icon="AllApps"
                                IsChecked="True"
                                Text="All" />

                            <RadioMenuFlyoutItem GroupName="Filter" Text="Action" />
                            <RadioMenuFlyoutItem GroupName="Filter" Text="Horror" />

                            <MenuFlyoutSeparator />

                            <MenuFlyoutItem Icon="Tag" Text="Manage Tags" />

                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

            </StackPanel>
        </Grid>

        <GridView
            Grid.Row="1"
            IsItemClickEnabled="True"
            ItemTemplate="{StaticResource MangaTemplate}"
            ItemsSource="{Binding FavoriteMangas}"
            SelectionMode="None" />
    </Grid>
</Page>
